{
  "manifest_version": 3,
  "name": "Add to Reading List",
  "version": "1.0",
  "description": "Add current page to Reading List with Ctrl+Shift+L",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "readingList",
    "activeTab"
  ],
  "commands": {
    "add-to-reading-list": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Add current page to Reading List"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}